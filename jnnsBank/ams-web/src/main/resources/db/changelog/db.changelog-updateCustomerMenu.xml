<?xml version="1.0" encoding="UTF-8"?>


<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property  name="now" dbms="mysql" value="now()"></property>
    <property  name="now" dbms="oracle" value="sysdate"></property>
    <property  name="now" dbms="db2" value="current_timestamp"></property>

    <changeSet id="customerSmartManager_add" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'sys_manager'</sqlCheck>
                <sqlCheck expectedResult="0">select count(*) from yd_sys_permission where yd_code = 'customerSmart_manager'</sqlCheck>
            </and>
        </preConditions>
        <insert tableName="yd_sys_permission">
            <column name="yd_id" valueComputed="(SELECT MAX(ysp1.yd_id)+1 FROM yd_sys_permission ysp1)"/>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_last_update_by" value="2"/>
            <column name="yd_last_update_date" valueDate="${now}"/>
            <column name="yd_version_ct" value="0"/>
            <column name="yd_code" value="customerSmart_manager"/>
            <column name="yd_deleted" valueBoolean="false"/>
            <column name="yd_description" value="客户智能管理"/>
            <column name="yd_enabled" valueBoolean="true"/>
            <column name="yd_icon" value="fa-users"/>
            <column name="yd_method" value="GET"/>
            <column name="yd_order_num" value="40000"/>
            <column name="yd_parent_id" value="-1"/>
            <column name="yd_permission_type" value="menu"/>
            <column name="yd_title" value="客户智能管理"/>
            <column name="yd_url" value=""/>
        </insert>
    </changeSet>

    <changeSet id="customerManager_update_mysql" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'sys_manager'</sqlCheck>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'customerSmart_manager'</sqlCheck>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'customer_manager' and yd_parent_id = '-1'</sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="mysql"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-mysql-customer_manager.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>
    <changeSet id="customerManager_update_oracle" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'sys_manager'</sqlCheck>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'customerSmart_manager'</sqlCheck>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'customer_manager' and yd_parent_id = '-1'</sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="oracle"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-oracle-customer_manager.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

    <changeSet id="customerAbnormalManager_add" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'sys_manager'</sqlCheck>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'customerSmart_manager'</sqlCheck>
                <sqlCheck expectedResult="0">select count(*) from yd_sys_permission where yd_code = 'customerAbnormal_manager'</sqlCheck>
            </and>
        </preConditions>
        <insert tableName="yd_sys_permission">
            <column name="yd_id" valueComputed="(SELECT MAX(ysp1.yd_id)+1 FROM yd_sys_permission ysp1)"/>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_last_update_by" value="2"/>
            <column name="yd_last_update_date" valueDate="${now}"/>
            <column name="yd_version_ct" value="0"/>
            <column name="yd_code" value="customerAbnormal_manager"/>
            <column name="yd_deleted" valueBoolean="false"/>
            <column name="yd_description" value="客户异动管理"/>
            <column name="yd_enabled" valueBoolean="true"/>
            <column name="yd_icon" value="fa-exclamation-triangle"/>
            <column name="yd_method" value="GET"/>
            <column name="yd_order_num" value="200"/>
            <column name="yd_parent_id" valueComputed="(SELECT ysp2.yd_id FROM yd_sys_permission ysp2 where ysp2.yd_code = 'customerSmart_manager')"/>
            <column name="yd_permission_type" value="menu"/>
            <column name="yd_title" value="客户异动管理"/>
            <column name="yd_url" value="../ui/customer/abnormal.html"/>
        </insert>
    </changeSet>

</databaseChangeLog>