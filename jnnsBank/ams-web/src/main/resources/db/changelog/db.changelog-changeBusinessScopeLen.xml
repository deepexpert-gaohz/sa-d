<?xml version="1.0" encoding="UTF-8"?>


<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="schema-mysql-changeBusinessScopeLen" author="chenluxiang" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="mysql"/>
                <tableExists tableName="yd_customer_public_mid"/>
                <sqlCheck expectedResult="200">select CHARACTER_MAXIMUM_LENGTH from information_schema.columns where
                    table_name='yd_customer_public_mid' and column_name = 'yd_business_scope_eccs' GROUP BY
                    CHARACTER_MAXIMUM_LENGTH desc limit 1
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="mysql"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-mysql-changeBusinessScopeLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

    <changeSet id="schema-oracle-changeBusinessScopeLen" author="chenluxiang" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="oracle"/>
                <tableExists tableName="YD_CUSTOMER_PUBLIC_MID"/>
                <sqlCheck expectedResult="200">SELECT CHAR_LENGTH FROM USER_TAB_COLUMNS WHERE
                    TABLE_NAME='YD_CUSTOMER_PUBLIC_MID' AND COLUMN_NAME = 'YD_BUSINESS_SCOPE_ECCS'
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="oracle"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-oracle-changeBusinessScopeLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

</databaseChangeLog>