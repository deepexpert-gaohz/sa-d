<?xml version="1.0" encoding="UTF-8"?>


<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="schema-mysql-changeDetailsLen" author="houxianghua" runOnChange="true" dbms="mysql">
        <modifyDataType columnName="yd_details"
                        newDataType="longtext"
                        tableName="yd_compare_result"/>
    </changeSet>

    <changeSet id="schema-oracle-changeDetailsLen" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="oracle"/>
                <tableExists tableName="YD_COMPARE_RESULT"/>
                <sqlCheck expectedResult="1000">SELECT CHAR_LENGTH FROM USER_TAB_COLUMNS WHERE
                    TABLE_NAME='YD_COMPARE_RESULT' AND COLUMN_NAME = 'YD_DETAILS'
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="oracle"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-oracle-changeDetailsLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

    <changeSet id="schema-mysql-changeRowContentLen" author="houxianghua" runOnChange="true" dbms="mysql">
        <modifyDataType columnName="yd_row_content"
                        newDataType="longtext"
                        tableName="yd_compare_result"/>
    </changeSet>

    <changeSet id="schema-oracle-changeRowContentLen" author="houxianghua" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="oracle"/>
                <tableExists tableName="YD_COMPARE_RESULT"/>
                <sqlCheck expectedResult="1000">SELECT CHAR_LENGTH FROM USER_TAB_COLUMNS WHERE
                    TABLE_NAME='YD_COMPARE_RESULT' AND COLUMN_NAME = 'YD_ROW_CONTENT'
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="oracle"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-oracle-changeRowContentLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

</databaseChangeLog>