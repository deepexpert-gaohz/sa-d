    <changeSet id="yd_account_bills_all_openAccountSiteType" author="yangqiu" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <not>
                <sqlCheck expectedResult="0">select count(*) from yd_account_bills_all where yd_open_account_site_type is null </sqlCheck>
