<?xml version="1.0" encoding="UTF-8"?>


<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="schema-mysql-changeFailMsgLen" author="taire" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="mysql"/>
                <tableExists tableName="yd_sync_history"/>
                <sqlCheck expectedResult="255">select CHARACTER_MAXIMUM_LENGTH from information_schema.columns where
                    table_name='yd_sync_history' and column_name = 'yd_fail_msg' GROUP BY
                    CHARACTER_MAXIMUM_LENGTH desc limit 1
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="mysql"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-mysql-changeFailMsgLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

    <changeSet id="schema-oracle-changeFailMsgLen" author="taire" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="oracle"/>
                <tableExists tableName="YD_SYNC_HISTORY"/>
                <sqlCheck expectedResult="255">SELECT CHAR_LENGTH FROM USER_TAB_COLUMNS WHERE
                    TABLE_NAME='YD_SYNC_HISTORY' AND COLUMN_NAME = 'YD_FAIL_MSG'
                </sqlCheck>
            </and>


        </preConditions>
        <sqlFile dbms="oracle"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-oracle-changeFailMsgLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

    <changeSet id="schema-db2-changeFailMsgLen" author="taire" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <dbms type="db2"/>
                <tableExists tableName="YD_SYNC_HISTORY"/>
                <sqlCheck expectedResult="255">select length from syscat.columns where tabname = 'YD_SYNC_HISTORY'
                    and colname = 'YD_FAIL_MSG'
                </sqlCheck>
            </and>
        </preConditions>
        <sqlFile dbms="db2"
                 encoding="utf8"
                 endDelimiter=";"
                 path="sql/schema-db2-changeFailMsgLen.sql"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>

</databaseChangeLog>