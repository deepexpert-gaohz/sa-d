<?xml version="1.0" encoding="UTF-8"?>


<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property  name="now" dbms="mysql" value="now()"></property>
    <property  name="now" dbms="oracle" value="sysdate"></property>
    <property  name="now" dbms="db2" value="current_timestamp"></property>
    <changeSet id="addRole1" author="chenluxiang" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_role where yd_name = '超级管理员'</sqlCheck>
                <sqlCheck expectedResult="0">select count(*) from yd_sys_role where yd_name = '分行审核员'</sqlCheck>
            </and>
        </preConditions>
        <insert tableName="yd_sys_role">
            <column name="yd_id" valueComputed="(SELECT MAX(ysp1.yd_id)+1 FROM yd_sys_role ysp1)"></column>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_last_update_by" value="2"/>
            <column name="yd_last_update_date" valueDate="${now}"/>
            <column name="yd_version_ct" value="0"/>
            <column name="yd_code" value="98"/>
            <column name="yd_deleted" valueBoolean="false"/>
            <column name="yd_enabled" value=""/>
            <column name="yd_level" value="9"/>
            <column name="yd_name" value="分行审核员"/>
        </insert>
    </changeSet>
    <changeSet id="addRole2" author="chenluxiang" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_role where yd_name = '超级管理员'</sqlCheck>
                <sqlCheck expectedResult="0">select count(*) from yd_sys_role where yd_name = '总行审核员'</sqlCheck>
            </and>
        </preConditions>
        <insert tableName="yd_sys_role">
            <column name="yd_id" valueComputed="(SELECT MAX(ysp1.yd_id)+1 FROM yd_sys_role ysp1)"></column>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_last_update_by" value="2"/>
            <column name="yd_last_update_date" valueDate="${now}"/>
            <column name="yd_version_ct" value="0"/>
            <column name="yd_code" value="99"/>
            <column name="yd_deleted" valueBoolean="false"/>
            <column name="yd_enabled" value=""/>
            <column name="yd_level" value="9"/>
            <column name="yd_name" value="总行审核员"/>
        </insert>
    </changeSet>
</databaseChangeLog>