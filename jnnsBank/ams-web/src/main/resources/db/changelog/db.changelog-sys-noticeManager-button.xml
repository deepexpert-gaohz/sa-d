<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property name="now" dbms="mysql" value="now()"></property>
    <property name="now" dbms="oracle" value="sysdate"></property>
    <property name="now" dbms="db2" value="current_timestamp"></property>
    <changeSet id="permission-sys-noticeManager-button.xml" author="taire" runOnChange="true">
        <preConditions onFail="CONTINUE">
            <and>
                <sqlCheck expectedResult="1">select count(*) from yd_sys_permission where yd_code = 'indexHtml'</sqlCheck>
                <sqlCheck expectedResult="0">select count(*) from yd_sys_permission where yd_code = 'noticeManager_btn'</sqlCheck>
            </and>
        </preConditions>
        <insert tableName="yd_sys_permission">
            <column name="yd_id" valueComputed="(SELECT MAX(ysp1.yd_id)+1 FROM yd_sys_permission ysp1)"></column>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_last_update_by" value="2"/>
            <column name="yd_last_update_date" valueDate="${now}"/>
            <column name="yd_version_ct" value="0"/>
            <column name="yd_code" value="noticeManager_btn"/>
            <column name="yd_deleted" valueBoolean="false"/>
            <column name="yd_description" value=""/>
            <column name="yd_enabled" valueBoolean="true"/>
            <column name="yd_method" value="GET"/>
            <column name="yd_order_num" valueComputed="(SELECT MAX(ysp3.yd_order_num)+1 FROM yd_sys_permission ysp3)"/>
            <column name="yd_parent_id" valueComputed="(SELECT ysp2.yd_id FROM yd_sys_permission ysp2 where ysp2.yd_code = 'indexHtml')"/>
            <column name="yd_permission_type" value="button"/>
            <column name="yd_title" value="公告管理"/>
            <column name="yd_url" value="../ui/about.html"/>
        </insert>
        <insert tableName="yd_sys_role_permission">
            <column name="yd_id" valueComputed="(SELECT MAX(ysrp.yd_id)+1 FROM yd_sys_role_permission ysrp)"/>
            <column name="yd_created_by" value="2"/>
            <column name="yd_created_date" valueDate="${now}"/>
            <column name="yd_permission_id" valueComputed="(SELECT ysp.yd_id FROM yd_sys_permission ysp where ysp.yd_code = 'noticeManager_btn')"/>
            <column name="yd_role_id" valueComputed="(SELECT ysr.yd_id FROM yd_sys_role ysr where ysr.yd_code = 'admin')"/>
        </insert>
    </changeSet>
</databaseChangeLog>